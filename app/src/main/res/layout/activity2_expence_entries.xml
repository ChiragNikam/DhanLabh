<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ExpenseAndHistory"
    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_expence_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="675dp"
        android:onClick="startExpenseEntry"
        android:contentDescription="@string/add_entry"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="355dp" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgreen"
        app:titleTextColor="@color/white" />

        <ListView
            android:id="@+id/expense_entrys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AFDFB9"
            android:padding="17dp"
            android:divider="@null"
            android:dividerHeight="10dp">

        </ListView>
    </com.google.android.material.appbar.AppBarLayout>

</RelativeLayout>
